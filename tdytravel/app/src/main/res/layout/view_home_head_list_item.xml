            <ImageView
                android:id="@+id/view_home_head_item_img_08"
                android:layout_width="65dp"
                android:layout_height="60dp"
                android:src="@mipmap/yijianjiuyuan"
                />
            <TextView
                android:id="@+id/view_home_head_item_title_08"
                android:layout_width="65dp"
                android:text="帮助中心"
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
