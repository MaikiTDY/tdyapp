<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="200dp"
              android:orientation="vertical"
     >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/view_home_head_item_img_01"
                android:layout_width="65dp"
                android:layout_height="60dp"
                android:src="@mipmap/menpiao"
                />
            <TextView
                android:id="@+id/view_home_head_item_title_01"
                android:layout_width="65dp"
                android:text="景点"
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/view_home_head_item_img_02"
                android:layout_width="65dp"
                android:layout_height="60dp"
                android:src="@mipmap/tiyanyou"
                />
            <TextView
                android:id="@+id/view_home_head_item_title_02"
                android:layout_width="65dp"
                android:text="体验游"
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/view_home_head_item_img_03"
                android:layout_width="65dp"
                android:layout_height="60dp"
                android:src="@mipmap/meishi"
                />
            <TextView
                android:id="@+id/view_home_head_item_title_03"
                android:layout_width="65dp"
                android:text="美食"
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/view_home_head_item_img_04"
                android:layout_width="65dp"
                android:layout_height="60dp"
                android:src="@mipmap/techan"
                />
            <TextView
                android:id="@+id/view_home_head_item_title_04"
                android:layout_width="65dp"
                android:text="特产"
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/view_home_head_item_img_05"
                android:layout_width="65dp"
                android:layout_height="60dp"
                android:src="@mipmap/jiudian"
                />
            <TextView
                android:id="@+id/view_home_head_item_title_05"
                android:layout_width="65dp"
                android:text="酒店"
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
