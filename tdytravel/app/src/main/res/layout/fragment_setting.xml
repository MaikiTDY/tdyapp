<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddbdb">
    <include layout="@layout/view_title_setting"/>
    <TextView
        android:id="@+id/settingfragment_msg_setting_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="消息推送"
        android:background="#fff"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textSize="17sp"
        android:drawableRight="@mipmap/right_black_big_arrow"
        android:paddingRight="10dp"/>
    <TextView
        android:id="@+id/settingfragment_msg_clearcache_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="清除缓存"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textSize="17sp"
        android:clickable="true"
        android:drawableRight="@mipmap/right_black_big_arrow"
        android:paddingRight="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="#fff">
        <TextView
            android:id="@+id/settingfragment_msg_newverson_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="新版本检测"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textSize="17sp"
            android:paddingRight="10dp"/>
        <TextView
            android:id="@+id/settingfragment_msg_showverson_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:textSize="17sp"
            android:layout_gravity="right"
            android:drawableRight="@mipmap/right_black_big_arrow"
            android:paddingRight="10dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/settingfragment_msg_aboutus_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="关于旅游攻略"
        android:clickable="true"
        android:background="#fff"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:layout_marginTop="1dp"
        android:textSize="17sp"
        android:drawableRight="@mipmap/right_black_big_arrow"
        android:paddingRight="10dp"/>
</LinearLayout>