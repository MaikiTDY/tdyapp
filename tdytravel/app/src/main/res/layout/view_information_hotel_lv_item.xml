<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="110dp"
              android:orientation="horizontal"
     >
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/view_information_hotel_lv_item_img"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:src="@mipmap/default_icon_200_200"
        android:layout_margin="5dp"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:layout_margin="5dp"
        >
        <TextView
            android:id="@+id/view_information_hotel_lv_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="标题"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textSize="15sp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="评价:"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/view_information_hotel_lv_item_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textStyle="bold"
                android:textColor="#ff7300"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="分"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textSize="12sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="价格:"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:layout_margin="5dp"
                android:textSize="12sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥:"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/view_information_hotel_lv_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textStyle="bold"
                android:textColor="#ff7300"
                android:layout_margin="5dp"
                android:textSize="12sp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/view_information_hotel_lv_item_address"
            android:layout_width="wrap_content"
            android:text="内容"
            android:layout_margin="5dp"
            android:textSize="11sp"
            android:maxEms="35"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
